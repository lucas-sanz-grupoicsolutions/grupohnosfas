{% extends 'Front/base/main.html.twig' %}


{% block content %}
  {% include 'Front/base/header.html.twig' %}

<link rel="stylesheet" href="/css/css_all/Services/create.css">

<body class="container_clientes">
    <div class="container mt-1">

        <div id="titulo_servicios">

            <div class="row">
                <div class="col-4 pl-3"><a href="javascript: history.go(-1)">&nbsp;&nbsp;&nbsp;
                        <img class="ml-3 pt-4 " src="\images\arrow_white_izq.png" alt="...">
                    </a></div>
                <div class="col-4"></div>
                <div class="col-4"></div>
            </div>

            <div class="cssscan">
                <p>
                    <h4 class="display-4 text-white text-center ">Dar de alta un Servicio</h4>
                    <p class=" texto_titulo text-white"> Gestion de Servicios</span>
                    </p>
                </p>

                <img src="\images\header_servicios.svg" alt="...">
            </div>
        </div>

        {% include 'Front/base/Services_/errorServices.html.twig' %}

        <form action="{{ baseUrl('addService') }}" method="POST">

            <div class="cuerpo_service mt-1">

                <div class="row">
                    <div class="col">
                        <div class="col-sm">
                            <div class="field field_v2">
                                <label for="name" class="ha-screen-reader"></label>
                                <input id="name" class="field__input" placeholder=" " name="name">
                                <span class="field__label-wrap" aria-hidden="true">
                                    <span class="field__label">Nombre de Servicio </span>
                                </span>
                            </div>
                            <p class="text-danger">{{ msg('errors.name') }}</p>
                        </div>
                    </div>

                     <div class="col">
                        <div class="col-sm">
                            <div class="field field_v2">
                                <label for="code" class="ha-screen-reader"></label>
                                <input id="code" class="field__input" placeholder=" " name="code">
                                <span class="field__label-wrap" aria-hidden="true">
                                    <span class="field__label">Codigo</span>
                                </span>
                            </div>
                            <p class="text-danger">{{ msg('errors.code') }}</p>
                        </div>
                    </div>



                </div>



                <div class="row mt-5" style="height:150px;">
                    <div class="col-md">

                        <div class="row">
                            <div class="col">
                            </div>
                            <div class="col-md">
                                <button class="button_servicie mt-3 pt-3 pb-3 text-white"
                                    type="submit">REGISTRAR</button>
                            </div>
                            <div class="col">
                            </div>
                        </div>
                    </div>
                </div>

        </form>
         <p class=" text-center mt-5">
            <a href="{{ routeTo('listService') }}">
                <img class="rounded mx-auto d-block " src="\images\regresar.png" alt="...">
            </a>
            <br> Volver a la lista de Servicios
        </p>

    </div>
</div>
</div>

  <div class="row " >
        <div class="col-12">

      {%  if msg('msg') %}

            <script>
                $(document).ready(function() {

                 var msg = {{ msg('msg')|json_encode|raw }};

                Swal.fire({
                    title: msg.title,
                    text: msg.text,
                    icon: 'success',
                    cancelButtonText: 'Cerrar'
                    })
                });


            </script>

      {% endif %}

        {%  if msg('msg2') %}

            <script>
                $(document).ready(function() {

                 var msg2 = {{ msg('msg2')|json_encode|raw }};

                Swal.fire({
                    title: msg2.title,
                    text: msg2.text,
                    icon: 'warning',
                    cancelButtonText: 'Cerrar'
                    })
                });


            </script>

      {% endif %}

     </div>
 </div>
{% include 'Front/base/footer.html.twig' %}
    {% endblock %}

    {% block script %}
    {{parent(script)}}

    <script>
        setTimeout(function() {
            $(".alerta").fadeOut(2000);
        }, 2200);
    </script>
     <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    {% endblock %}

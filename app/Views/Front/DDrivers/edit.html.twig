{% block content %}
{% include 'Front/base/header.html.twig' %}
<link rel="stylesheet" href="/css/css_all/Drivers/edit.css">

<link rel="stylesheet" href="/css/css_all/conductores.css">

<div class="container mt-1">

    <div id="title_drivers">

        <div class="row">
            <div class="col-4 pl-3">
                <a href="javascript: history.go(-1)">&nbsp;&nbsp;&nbsp;
                    <img class="ml-3 pt-4 " src="\images\arrow_white_izq.png" alt="...">
                </a>
            </div>
            <div class="col-4"></div>
            <div class="col-4"></div>
        </div>

        <div class="cssscan">
            <p>
                {% for driver in ddrivers %}
                {# <img class="rounded mx-auto d-block m-3" src="\images\paquetes_white.png" alt="..."> #}

                <h4 class="display-4 text-center ">Conductor {{ driver.name }}
                </h4>
                <p class=" texto_titulo ">Modificar el Conductor
                </p>
            </p>
            </p>

            <img src="\images\conductor_header.svg" alt="...">
        </div>
    </div>

    <form action="{{ routeTo('editSaveDrivers', driver.id_driver) }}" method="POST">

        <div class="cuerpo_contenedores mt-2">

            <div class="row m-4">
                <div class="col-sm">
                    <div class="field field_v2">
                        <label for="name" class="ha-screen-reader"></label>
                        <input id="name" class="field__input" placeholder="{{ driver.name }}" name="name"
                            value="{{ driver.name }}">
                        <span class="field__label-wrap" aria-hidden="true">
                            <span class="field__label">Nombre
                            </span>
                        </span>
                    </div>
                    <p class="text-danger">{{ msg('errors.name') }}</p>
                </div>

                <div class="col-sm">
                    <div class="field field_v2">
                        <label for="phone" class="ha-screen-reader"></label>
                        <input id="phone" class="field__input" placeholder="{{ driver.phone }}" name="phone"
                            value="{{ driver.phone }}">
                        <span class="field__label-wrap" aria-hidden="true">
                            <span class="field__label">Telefono
                            </span>
                        </span>
                    </div>
                    <p class="text-danger">{{ msg('errors.phone') }}</p>
                </div>

            </div>

            <div class="row m-4">

                <div class="col-sm">
                    <div class="field field_v2">
                        <label for="province" class="ha-screen-reader"></label>
                        <input id="province" class="field__input" placeholder="{{ driver.province }}" name="province"
                            value="{{ driver.province }}">
                        <span class="field__label-wrap" aria-hidden="true">
                            <span class="field__label">Provincia
                            </span>
                        </span>
                    </div>
                    <p class="text-danger">{{ msg('errors.province') }}</p>
                </div>

            </div>

               <div class="row mt-4 m-4">
                <div class="col">

                    <label for="exampleFormControlTextarea1" class="p-2">Observaciones</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="observations"
                        rows="5">{{ old('observations') }}
                    </textarea>
                    <p class="text-danger">{{ msg('errors.observations') }}</p>
                </div>
            </div>



        {% endfor %}

        <div class="row mt-4">
            <div class="col-md">

                <div class="row">
                    <div class="col"></div>
                    <div class="col-md">
                        <button class=" mt-3 pt-3 pb-3 boton_add_driver text-white" type="submit">REGISTRAR</button>
                    </div>
                    <div class="col"></div>
                </div>
            </div>
    </form>
    <p class=" text-center mt-5">
        <a href="{{ routeTo('listDrivers') }}">
            <img class="rounded mx-auto d-block " src="\images\regresar.png" alt="...">
        </a>
        <br>
        Volver a la lista de Conductores
    </p>

</div>
</div>
     </div>

    </div>



  <div class="row " >
        <div class="col-12">

      {%  if msg('msg') %}

            <script>
                $(document).ready(function() {

                 var msg = {{ msg('msg')|json_encode|raw }};

                Swal.fire({
                    title: msg.title,
                    text: msg.text,
                    icon: 'success',
                    cancelButtonText: 'Cerrar'
                    })
                });
            </script>

      {% endif %}
        {%  if msg('msg2') %}

            <script>
                $(document).ready(function() {

                 var msg2 = {{ msg('msg2')|json_encode|raw }};

                Swal.fire({
                    title: msg2.title,
                    text: msg2.text,
                    icon: 'warning',
                    cancelButtonText: 'Cerrar'
                    })
                });


            </script>

      {% endif %}

     </div>
 </div>



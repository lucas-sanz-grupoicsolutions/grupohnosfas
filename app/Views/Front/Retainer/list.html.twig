<body class="container_clientes">

    <div class="container mt-1">

        <div id="title_retainer">

            <div class="row">
                <div class="col-4 pl-3"><a href="javascript: history.go(-1)">&nbsp;&nbsp;&nbsp;
                        <img class="ml-3 pt-4 " src="\images\arrow_white_izq.png" alt="...">
                    </a></div>
                <div class="col-4"></div>
                <div class="col-4"></div>
            </div>

            <div class="cssscan">
                <p>
                    <h4 class="display-4 text-white text-center ">Listado de Anticipos</h4>
                    <p class=" texto_titulo text-white"> Gestion de Anticipos dar de alta, modificar y listar</span>
                    </p>
                </p>

                <img src="\images\clientesvg.svg" alt="...">
            </div>
        </div>

        <div class="cuerpo_contenedores mt-2">

            <div class="row p-2 mb-3 justify-content-center justify-content-md-start">

                <div class="col-4 "> </div>

                <div class="col-sm-4 pb-3">

                    <a class="text-center" href="{{ routeTo('showFormRetainer') }}">
                        <span class=" mx-auto d-block text-center boton_add_retainer">

                            <img class=" pt-3" src="\images\add_1.png" alt="...">

                        </span>
                    </a>

                </div>

                <div class="col-4 "> </div>
            </div>

            <div class="row mt-3">

                <div class="col-sm-4">
                    <form action="{{ baseUrl('searchforIdPaq') }}" method="POST">
                        <div class="row ">
                            <div class="col-8">
                                <i class="fa fa-user icon"></i>
                                <input type="text" class="form-control text-left mr-2 " name="id_package_code"
                                    placeholder="Buscar un cliente ">
                                <p class="pl-2 text-danger text-center">{{ msg('errors.id_package_code') }}</p>

                            </div>
                            <div class="col-4 col_icon_search">
                                <button class="pt-2 buttonSearch" type="submit"> <img class="img-fluid"
                                        src="\images\lupa.png" alt="...">
                                </button>
                            </div>

                        </div>{#row#}

                    </form>
                </div>

                <div class="col-sm-4 ">
                    <form action="{{ baseUrl('searchPackageforDateC') }}#sectionTable" method="POST">
                        <div class="row ">
                            {# <p id="list_pallet_buscar_texto text-center p-1">BUSCAR POR FECHAS CREACION</p>#}

                            <div class="col-8 msj">
                                <input type="date" class="form-control text-left ml-2 " name="fechaIni"
                                    placeholder="Fecha de final">
                                <label class="ml-3 form-control-placeholder" id="end-p" for="end"></label>
                                <span class="pl-2 text-danger text-center">{{ msg('errors.fechaIni') }}</span>
                            </div>
                            <div class="col-4 col_icon_search">
                                <button class="pt-2 buttonSearch" type="submit"> <img class="img-fluid"
                                        src="\images\lupa.png" alt="...">
                                </button>
                            </div>

                        </div>{#row#}
                    </form>
                </div>

                <div class="col-sm-4 ">

                    <div class="text-center listar ">

                        <a class=" text-center " href="{{ routeTo('listPackages') }}#sectionTable">
                            <p class="pt-3 font-weight-bold">
                                <span class="font-weight-bold text-white listar_todos">Listar todos los
                                    Anticipos</span>
                            </p>

                        </a>

                    </div>{#row#}

                </div>

            </div>{# row#}

             <table class="table table-striped  text-center">
                <thead>
                    <tr>
                        <th class="text-center align-middle" scope="col">Descuento</th>
                        <th class="pt-3 text-center align-middle" scope="col">Factura</th>
                        <th class="pt-3 text-center align-middle" scope="col">Acciones</th>

                    </tr>
                </thead>
                <tbody>
                      {% for retainer in retainers %}
                    <tr>

                        <th scope="row" class="text-center align-middle">{{ retainer.amount }}</th>
                         <th scope="row" class="text-center align-middle">{{ retainer.bill }}</th>



                        <td class="   text-left align-middle">
                            <div class=" boton_menu text-center">
                                <nav class="navbar navbar-expand-lg  navbar-light text-center nav_menu">

                                    <button class="navbar-toggler  text-center" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#navbarSupportedContentTabla"
                                        aria-controls="navbarSupportedContentTabla" aria-expanded="false"
                                        aria-label="Toggle navigation">
                                        <span class="navbar-toggler-icon icono_menu_nav text-center"></span>
                                    </button>

                                    <div class="collapse navbar-collapse " id="navbarSupportedContentTabla">

                                        <ul class="navbar-nav text-center nav justify-content-center ">

                                            <li class="nav-item">
                                                <a class="text-white "
                                                    href="{{ routeTo('seeDetailAlbaran', retainer.id_retainer) }}">
                                                    <img src="\images\ver_albaran.png" alt="..."
                                                        title="detalle del albaran">
                                                </a>
                                            </li>

                                            <li class="nav-item ">
                                                <a class="text-white "
                                                    href="{{ routeTo('updateCustomers', retainer.id_retainer) }}">
                                                    <img src="\images\edit.png" alt="..." title="editar albaran">
                                                </a>

                                            </li>
                                            {% if checkPerms(['create_partida']) ==  '1' %}
                                            <li class="nav-item ">
                                                <a class="text-white "
                                                    href="{{ routeTo('PredeleteCustomers', retainer.id_retainer) }}">
                                                    <img src="\images\delete_white.png" alt="...">
                                                </a>

                                            </li>
                                            {% endif %}
                                        </ul>
                                    </div>

                                </nav>

                            </div>
                        </td>

                    </tr>

                    {% endfor %}
                </tbody>
            </table>




            <div class="row pt-5">
                <div class="col">
                    <p class=" text-center">
                        <a href="{{ routeTo('home') }}">
                            <img class="rounded mx-auto d-block " src="\images\regresar.png" alt="...">
                        </a>
                        <br> ir a Inicio
                    </p>
                </div>
            </div>

            {{ pager | raw }}
        </div>
    </div>

